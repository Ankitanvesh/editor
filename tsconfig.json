{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": false,
  "types": [
    "node"
  ],
  "include": [
    "src/**/*.ts",
    "typings/*.d.ts"
  ]
}
