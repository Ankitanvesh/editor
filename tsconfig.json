{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "node_modules/vega-lite/typings/*.d.ts"
  ]
}
